{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/arnavyash/react-app-boilerplate.git",
  "author": "Arnav Yash <arnavyash2004@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:dev": "webpack-dev-server --env.mode development",
    "build": "rimraf dist && webpack --env.mode production",
    "build:dev": "rimraf dist && webpack --env.mode development",
    "lint": "eslint --format=pretty --cache --ext js,jsx .",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "eslint --format=pretty --ext js,jsx --fix",
    "fmt": "cross-env prettier --write '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "fmt:check": "cross-env prettier-check '**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:upgrade": "npm test -- --updateSnapshot",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test -- --ci",
    "codecov": "codecov"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/config/**",
      "!**/coverage/**",
      "!webpack.config.js",
      "!**/dist/**",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "testURL": "http://localhost:8085"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/{.[^.],}*.{js,jsx}": [
      "npm run lint:staged",
      "git add"
    ],
    "**/{.[^.],}*.{html,md,mdx,yml,yaml,json,css,scss,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "7.5.4",
    "@babel/preset-env": "7.5.4",
    "@babel/preset-react": "7.0.0",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "codecov": "3.5.0",
    "cross-env": "5.2.0",
    "eslint": "6.0.1",
    "eslint-config-airbnb": "17.1.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-formatter-pretty": "2.1.1",
    "eslint-loader": "2.2.1",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.2",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "9.2.0",
    "prettier": "1.18.2",
    "prettier-check": "2.0.0",
    "react-test-renderer": "16.8.6",
    "rimraf": "2.6.3",
    "webpack": "4.35.3",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.6",
    "webpack-dev-server": "3.7.2",
    "webpack-merge": "4.2.1"
  },
  "dependencies": {
    "app-root-path": "2.2.1",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  }
}
